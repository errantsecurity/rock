services:
  - docket
  - docket-celery-io
  - docket-celery-query
  - docket.socket
  - lighttpd

file_paths:
  - /var/log/docket/docket.log
  - /etc/pki/tls/private/httpd-combined.pem
  - /etc/pki/tls/misc/http_tls_dhparams.pem
  - /etc/docket/prod.yaml
  - /etc/lighttpd/vhosts.d/docket.conf
  - /etc/sysconfig/docket
  - /etc/lighttpd/lighttpd.conf

dir_paths:
  - /var/spool/docket
  - /etc/pki/docket
  - /var/log/docket
  - /run/docket
  - /etc/lighttpd/vhosts.d/
  - /var/log/lighttpd

packages:
  - docket
  - lighttpd

firewall_ports:
  - 443
  - 8443

# redis port used for que 6379
listening_ports:
  - 6379
  - 8443
